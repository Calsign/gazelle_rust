load("@rules_rust//crate_universe:defs.bzl", "crate", "crates_vendor")

# Update vendored packages with: bazel run //3rdparty:crates_vendor
# Repin with: bazel run //3rdparty:crates_vendor -- --repin
crates_vendor(
    name = "crates_vendor",
    cargo_lockfile = "@gazelle_rust//:cargo.lock",
    packages = {
        "syn": crate.spec(
            features = [
                "full",
                "visit",
                "extra-traits",
            ],
            version = "2",
        ),
        "clap": crate.spec(
            features = ["derive"],
            version = "4",
        ),
        "lazy_static": crate.spec(
            version = "1.4",
        ),
        "cargo-lock": crate.spec(
            version = "8.0",
        ),
        "cargo_toml": crate.spec(
            version = "0.16",
        ),
        "boolean_expression": crate.spec(
            version = "0.4",
        ),
    },
)
