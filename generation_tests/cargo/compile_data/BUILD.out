load("@rules_rust//rust:defs.bzl", "rust_binary", "rust_library")

# gazelle:rust_mode generate_from_cargo

rust_library(
    name = "basic_lib",
    srcs = [
        "src/foobar.rs",
        "src/lib.rs",
    ],
    compile_data = [
        "Cargo.toml",
        "src/file1.txt",
        "src/file2.txt",
